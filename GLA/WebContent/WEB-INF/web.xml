<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Forum</display-name>
	<filter>
		<filter-name>SessionCheckFilter</filter-name>
		<filter-class>fr.acceis.forum.Filter.SessionCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionCheckFilter</filter-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/message.jsp/*</url-pattern>
		<url-pattern>/profil.jsp/*</url-pattern>
		<url-pattern>/upload</url-pattern>
		<url-pattern>/remove.jsp/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>accueil</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.AccueilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signup</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.SignUpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>topic</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.TopicServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>thread</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.ThreadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>message</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.MessageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>profil</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.ProfilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.UploadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>remove</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.RemoveServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>error401</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.Error401Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accueil</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>topic</servlet-name>
		<url-pattern>/topic</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>thread</servlet-name>
		<url-pattern>/thread.jsp/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>message</servlet-name>
		<url-pattern>/message.jsp/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>profil</servlet-name>
		<url-pattern>/profil.jsp/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>error401</servlet-name>
		<url-pattern>/error401</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>remove</servlet-name>
		<url-pattern>/remove.jsp/*</url-pattern>
	</servlet-mapping>
</web-app>